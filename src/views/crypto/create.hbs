<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form  method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{crypto.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{crypto.imageUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" placeholder="31,166.71" pattern="[a-zA-Z0-9\s-]+" value="{{crypto.price}}">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="Introduce your coins..." >
                {{crypto.description}}
            </textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                {{>options}}              
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>